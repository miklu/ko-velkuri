<!DOCTYPE html>
<html lang="fi" ng-app="app">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="ClearType" content="true">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Velkuri</title>
  <meta name="description" content="Pidä kirjaa veloistasi">
  <link rel="stylesheet" href="css/styles.css">
  <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,600" rel="stylesheet">
</head>

<body>

  <h1>Velkuri</h1>
  
  <!-- Lisää lomake -->
  <input type="text" placeholder="lainaaja" data-bind="value: lomake.lainaaja" />
  <input type="text" placeholder="velallinen" data-bind="value: lomake.velallinen" />
  <input type="text" placeholder="summa" data-bind="value: lomake.summa">
  <input type="text" placeholder="kuvaus" data-bind="value: lomake.kuvaus">
  <button data-bind="click: tallenna">Tallenna</button>
  
  <!-- Velat taulukko -->
  <table>
    <thead>
      <tr>
        <th>Lainaaja</th>
        <th>Summa</th>
      </tr>
    </thead>
    <tbody data-bind="foreach: velat">
      <tr data-bind="click: $root.naytaVelanTiedot">
        <td data-bind="text: _id"></td>
        <td data-bind="text: yhteensa"></td>
      </tr>
    </tbody>
  </table>

  <ul data-bind="foreach: velanTiedot">
    <li>
      <p data-bind="text: summa"></p>
      <span data-bind="text: kuvaus"></span>
      <a href="#" data-bind="click: $root.poista">Poista</a>
      <a href="#" data-bind="click: $root.muokkaa">Muokkaa</a>
    </li>
  </ul>

  <script src="js/jquery-2.1.1.min.js"></script>
  <script src="js/knockout.js"></script>
  <script src="js/app.js"></script>

</body>
</html>